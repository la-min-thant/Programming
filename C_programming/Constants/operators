#include <stdio.h>
int main(){
    int sum=100+150;
    int sum1=sum+200;
    int sum2=sum1+50;
    printf("sum is: %d\n",sum);
    printf("sum1 is: %d\n",sum1);
    printf("sum2 is: %d\n",sum2);
    //self operate
    int x=15;
    x += 3;//x=x+3, x=18
    printf("x=%d\n",x);
    int a=12;
    a -= 4;//a=a-4
    printf("a=%d\n",a);
    int b=20;
    b *= 5;
    printf("b=%d\n",b);
    int c=50;
    c /= 5;
    printf("c=%d\n",c);
    int d=25;
    d %= 5;//if you want remainder
    printf("d=%d\n",d);
    int e=100;
    e &= 6;
    printf("e=%d\n",e);
    int f=9;
    f |= 3;
    printf("f=%d\n",f);
    int g=4;
    g ^= 2;
    printf("g=%d\n",g);
    int h=5;
    g >>=3;
    printf("h=%d\n",h);
    return 0;
}